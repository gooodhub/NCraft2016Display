@model NCraftDisplay.Models.ScoreBoardViewModel
<div class="row jumbotron">
    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>Player</th>
                        <th>Score</th>
                        <th>Evolution</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model.Players)
                    {
                        <tr>
                            <td>@i.Rank</td>
                            <td>@i.Name</td>
                            <td>@i.Score</td>
                            <td><span class="glyphicon glyphicon-arrow-up text-success"></span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 label label-warning">
            <span class="glyphicon glyphicon-warning-sign"></span> Next batch in : 10 minute(s)
        </div>
    </div>
</div>