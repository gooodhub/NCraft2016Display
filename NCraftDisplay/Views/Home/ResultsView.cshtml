@model NCraftDisplay.Models.ScoreBoardViewModel
<div class="row">
    <div class="col-lg-12">
        <table class="table table-condensed lead">
            <thead>
                <tr>
                    <th>Rank</th>
                    <th>Player</th>
                    <th>Score</th>
                    <th>Evolution</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.Players)
                {
                    <tr>
                        <td>@i.Rank</td>
                        <td>@i.Name</td>
                        <td>@i.Score</td>
                        <td><span class="@i.EvolutionClass"></span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-lg-6 label label-success">
        <span class="glyphicon glyphicon-check"></span> Latest batch at @Model.LatestBatch.ToString("HH:mm")
    </div>
    <div class="col-lg-6 label label-warning">
        <span class="glyphicon glyphicon-warning-sign"></span> Next batch at @Model.NextBatch.ToString("HH:mm")
    </div>
</div>